            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account_entity_account_index') }}">back to list</a>

    <a href="{{ path('app_account_entity_account_edit', {'id': account.id}) }}">edit</a>

