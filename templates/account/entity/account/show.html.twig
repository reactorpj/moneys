{% extends 'layouts/base.html.twig' %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ account.title }}</td>
            </tr>
            <tr>
                <th>StartBalance</th>
